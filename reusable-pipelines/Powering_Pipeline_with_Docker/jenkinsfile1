
pipeline {
  agent any  // Runs on a Windows node (controller or agent)

  options {
    timestamps()
    ansiColor('xterm')
  }

  environment {
    VERSION = '0.1.0'
    RELEASE_VERSION = 'R.2'
    // Optional: If you have explicit installations, set and use these:
    // JAVA_HOME = 'C:\\Program Files\\Java\\jdk-17'
    // MAVEN_HOME = 'C:\\apache-maven-3.9.9'
  }

  stages {
    stage('Audit tools') {
      steps {
        // If you set JAVA_HOME/MAVEN_HOME above, uncomment to prepend to PATH:
        // bat 'set PATH=%JAVA_HOME%\\bin;%MAVEN_HOME%\\bin;%PATH%'

        bat '''
          echo Checking Java & Maven versions...
          java -version
          mvn -version

          echo Dumping Windows environment variables...
          set

          echo Listing workspace contents...
          dir "%WORKSPACE%"
        '''
      }
    }

    stage('Unit Test') {
      steps {
        dir('java-tomcat-sample') {
          bat '''
            echo Executing Unit Tests...
            mvn -B test
          '''
        }
      }
      post {
        always {
          // Publish JUnit reports if present
          junit testResults: 'java-tomcat-sample/target/surefire-reports/*.xml', allowEmptyResults: true
        }
      }
    }

    stage('Build') {
      steps {
        echo "Building version: ${VERSION} with suffix: ${RELEASE_VERSION}"
        echo 'Mention your Application Build Code here!!!'
        bat 'mvn -B -f "java-tomcat-sample/pom.xml" clean package'
      }
    }

    stage('Archive Artifact') {
      steps {
        // Adjust pattern based on your packaging (.war or .jar)
        archiveArtifacts artifacts: 'java-tomcat-sample/target/*.war', fingerprint: true, allowEmptyArchive: true
      }
    }
  }

  post {
    success {
      echo 'Build completed successfully.'
    }
    failure {
      echo 'Build failedâ€”see logs above.'
    }
    always {
      // Helpful for debugging Windows file paths/permissions
      bat 'dir /s /b "java-tomcat-sample\\target"'
    }
  }
}
